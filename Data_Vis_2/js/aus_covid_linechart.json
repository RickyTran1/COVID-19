{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 660,
  "height": 400,
  "title": "Daily COVID-19 Cases per 10,000 Population for Each State in Australia",
  "data": {
    "url": "https://raw.githubusercontent.com/RickyTran1/FIT3179/main/Data_Vis_2/data/COVID_AU_state_with_pop.csv"
  },
  "params": [
    {
      "name": "State_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Australian Capital Territory",
          "New South Wales",
          "Northern Territory",
          "Queensland",
          "South Australia",
          "Tasmania",
          "Victoria",
          "Western Australia"
        ],
        "labels": [
          "Show All",
          "Australian Capital Territory",
          "New South Wales",
          "Northern Territory",
          "Queensland",
          "South Australia",
          "Tasmania",
          "Victoria",
          "Western Australia"
        ],
        "name": "State Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.confirmed > 0"},
    {"filter": "State_selection == null || datum.state == State_selection"},
    {
      "calculate": "datum.confirmed/datum.population * 10000",
      "as": "Daily Cases per 10,000 Population"
    }
  ],
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {"tickCount": "month"},
      "title": "Month"
    },
    "y": {
      "field": "Daily Cases per 10,000 Population",
      "type": "quantitative",
      "title": "Daily Cases per 10,000 Population"
    },
    "color": {"field": "state"},
    "tooltip": [
      {"field": "state", "type": "nominal", "title": "State"},
      {"field": "date", "type": "temporal", "title": "Date"},
      {"field": "confirmed", "type": "quantitative", "title": "Daily Cases"},
      {
        "field": "population",
        "type": "quantitative",
        "format": ",",
        "title": "Population"
      },
      {
        "field": "Daily Cases per 10,000 Population",
        "type": "quantitative",
        "format": ".2f"
      }
    ]
  },
  "layer": [
    {
      "selection": {
        "State_highlight": {
          "type": "multi",
          "fields": ["state"],
          "bind": "legend"
        }
      },
      "mark": "line",
      "encoding": {
        "color": {
          "field": "state",
          "title": "State",
          "type": "nominal",
          "scale": {
            "domain": [
              "Australian Capital Territory",
              "New South Wales",
              "Northern Territory",
              "Queensland",
              "South Australia",
              "Tasmania",
              "Victoria",
              "Western Australia"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "State_highlight", "value": 0.9},
          "value": 0.1
        },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {"field": "date", "type": "temporal", "title": "Date"},
          {
            "field": "confirmed",
            "type": "quantitative",
            "title": "Daily Cases"
          },
          {
            "field": "population",
            "type": "quantitative",
            "format": ",",
            "title": "Population"
          },
          {
            "field": "Daily Cases per 10,000 Population",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "bottom",
        "dx": -12,
        "fontSize": 12,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "Daily Cases per 10,000 Population",
          "type": "nominal",
          "format": ".3f"
        },
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['state'] == 'Victoria' & datum['confirmed'] == 700 || datum['state'] == 'Australian Capital Territory' & datum['confirmed'] == 13 || datum['state'] == 'Tasmania' & datum['confirmed'] == 15",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {"field": "date", "type": "temporal", "title": "Date"},
          {
            "field": "confirmed",
            "type": "quantitative",
            "title": "Daily Cases"
          },
          {
            "field": "population",
            "type": "quantitative",
            "format": ",",
            "title": "Population"
          },
          {
            "field": "Daily Cases per 10,000 Population",
            "type": "quantitative",
            "format": ".3f"
          }
        ]
      }
    }
  ],
  "config": {}
}
